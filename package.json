{
  "dependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.8.3",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "hardhat": "^2.13.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@smartdec/smartcheck": "^2.0.1"
  },
  "scripts": {
    "test": "MAX_PLAYERS=100 REPORT_GAS=true  node --max-old-space-size=12000 ./node_modules/.bin/hardhat test test/Lottery.test.ts",
    "test:1000": "MAX_PLAYERS=1000 REPORT_GAS=true npx hardhat test test/Lottery.test.ts",
    "test:parallel": "npx hardhat test --parallel",
    "test:coverage": "npx hardhat coverage",
    "deploy:lottery": "npx hardhat run ./scripts/deployLottery.ts --network localhost",
    "deploy:usdt": "npx hardhat run scripts/deployUSDT.ts --network localhost",
    "deploy:usdt-receiver": "npx hardhat run scripts/deployUSDTReceiver.ts --network localhost",
    "deploy:both-usdt-receiver": "npx hardhat run scripts/deployBothUSDTAndReceiver.ts --network localhost",
    "deploy:etherscan-verify": "npx hardhat verify --network mumbai 0xd8dc037740032BF8a37b38961488256BC19a34cB 0xFca133cA8947EA963218812D5BB18fa6B6F03244"
  }
}
